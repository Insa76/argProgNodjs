<%-include('partials/head') %>
<h3 class="text-center"><b>&lt;Admin Panel &gt;</b></h3>
<div class="container mt-5">
  <div class="row">
    <div class="col">
      <h4 class="text-center"><b>Eliminar Post /&gt;</b></h4>

      <form action="#" id="form-eliminar" data-id="<%= id  %>">
        <div class="mb-3">
          <input
            type="text"
            id="titulo-post"
            class="form-control"
            placeholder="TÃ­tulo del Post"
          />
        </div>

        <div class="mb-3">
          <div class="form">
            <textarea
              id="detalle-post"
              class="form-control"
              placeholder="Contenido"
              style="height: 100px"
            ></textarea>
          </div>
        </div>
        <div class="d-flex">
          <div class="mb-3 p-0">
            <input
              type="text"
              id="autor"
              class="form-control"
              placeholder="Autor del Post"
            />
          </div>
          <div class="mb-3 mx-3">
            <input type="date" name="" id="fecha" class="form-control" />
          </div>
        </div>

        <div class="mb-3">
          <input
            type="text"
            id="url-img"
            class="form-control"
            placeholder="Url imagen"
          />
        </div>

        <div class="d-flex justify-content-center gap-2 mt-4 mb-5">
          <button type="submit" id="btn-eliminar" class="btn btn-dark">
            Eliminar
          </button>
          <a href="/" class="btn btn-danger p-1" id="cancelar">Cancelar</a>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/js/eliminar.js"></script>

<%-include('partials/footer') %>
